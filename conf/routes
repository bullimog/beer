# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /components                 controllers.Components.present
GET     /device-edit                controllers.DeviceEdit.present(deviceId:Int)
POST    /device-edit                controllers.DeviceEdit.submit()
#GET     /device-delete              controllers.DeviceDelete.present(deviceId:Int)

GET     /sequencerStatus/           controllers.Application.sequencerStatus
GET     /startSequencer/            controllers.Application.startSequencer
GET     /stopSequencer/             controllers.Application.stopSequencer
GET     /setComponentState/         controllers.Application.setComponentState(component:String, value:String)

GET     /javascriptRoutes           controllers.Application.javascriptRoutes


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
